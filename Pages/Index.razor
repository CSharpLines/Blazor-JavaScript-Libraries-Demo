@page "/"
@using JSInterpDemo.JavascriptComponents.Noty;
@using JSInterpDemo.Models;

<h1>Hello, world!</h1>

Welcome to your new app.

<button @onclick=AddNotification>Add Notification</button>

<div class="box-wrapper">
    @{
        foreach (var document in DatabaseContext.Documents)
        {
            <DocumentBox
                Model="document">
            </DocumentBox>
        }
    }
</div>

<style>
    .box-wrapper {
        margin-top: 10px;
        display: flex;
        gap: 10px;
    }
</style>

@code {
    public void AddNotification()
    {
        DatabaseContext.Notifications.Add(new Notification
        {
            Text = $"Notifcation Test {DatabaseContext.Notifications.Count}",
            Type = NotyAlertType.success,
        });

        StateHasChanged();
    }
}