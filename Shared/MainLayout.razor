@using JSInterpDemo.JavascriptComponents.Noty;
@inherits LayoutComponentBase

<div class="page">
	<div class="sidebar">
		<NavMenu />
	</div>

	<main>
		<div class="top-row px-4">
			<a href="https://docs.microsoft.com/aspnet/" target="_blank">About</a>
		</div>

		<article class="content px-4">
			@{
				var notificationsToShow = DatabaseContext.Notifications.Where(a => !a.DateShown.HasValue).ToList();

				foreach(var notification in notificationsToShow)
				{
					<NotyComponent
						Model="notification"
						Position="NotyPositionType.topRight"
						TimeoutInMs="3000">
					</NotyComponent>
				}
			}
			@Body
		</article>
	</main>
</div>
